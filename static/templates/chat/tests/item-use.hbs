<div class="test">

    {{#if itemSummary}}
        {{{itemSummary}}}
    {{/if}}

    {{#if context.potency}}
    <div style="text-align: center"><strong>{{localize "TOW.Chat.Potency"}}</strong>: {{context.potency}}</div>
    {{/if}}

    {{#if result.damage.value}}
    <div style="text-align: center"><strong>{{localize "TOW.Chat.Damage"}}</strong>: {{result.damage.value}}</div>
    <button data-action="applyDamage"><i class="fa-solid fa-crosshairs"></i> {{localize "TOW.Chat.ApplyDamage"}}</button>
    {{/if}}

    {{> effectButtons}}

    {{#if showChatTest}}
        <button data-action="chatTest" data-uuid="{{item.uuid}}">{{item.system.test.label}}</button>
    {{/if}}

    {{#if targetTokens.length}}
        <div class="targets">
            <p class="header">Targets <i class="fa-solid fa-crosshairs"></i></p>
            <div class="target-list">
                {{#each targetTokens}}
                    <div class="token" data-id="{{this.id}}">
                        <img src="{{this.texture.src}}">
                        <p>{{this.name}}</p>
                    </div>
                {{/each}}
            </div>
        </div>
    {{/if}}


    {{!-- <div class="result {{#if this.result.succeeded}}succeeded{{else}}failed{{/if}}"> --}}
    {{!-- {{#if this.result.succeeded}}Success!{{else}}Failure!{{/if}} --}}
    {{!-- </div> --}}
</div>