<section class="tab {{tab.cssClass}}" data-group="primary" data-tab="{{tab.id}}">
    <div class="conditions">
        {{#each conditions}}
        <div class="condition {{#if this.existing}}active{{/if}}" >
            <img src="{{img}}">
            <a data-condition="{{@key}}" data-action="toggleCondition">{{this.name}}</a>
        </div>
        {{/each}}
    </div>
    <div class="effect-lists">
        <div class="sheet-list">
            <div class="list-header row-content">
                <div class="list-name">{{localize "TOW.Sheet.TemporaryEffects"}}</div>
                <div>{{localize "TOW.Sheet.Source"}}</div>
                <div class="list-controls">
                    <a class="list-control" data-action="createEffect" data-category="temporary">
                        <i class="fas fa-plus"></i>
                    </a>
                </div>
            </div>
            <div class="list-content">
                {{#each effects.temporary}}
                    <div class="list-row" data-uuid="{{this.uuid}}">
                        <div class="row-content">
                            {{> listEffect effect=this}}
                        </div>
                        {{> sheetButtons document=this}}
                        <div class="dropdown-content collapsed">

                        </div>
                    </div>
                {{/each}}
            </div>
        </div>


        <div class="sheet-list">
            <div class="list-header row-content">
                <div class="list-name">{{localize "TOW.Sheet.PassiveEffects"}}</div>
                <div>{{localize "TOW.Sheet.Source"}}</div>
                <div class="list-controls">
                    <a class="list-control" data-action="createEffect" data-category="passive">
                        <i class="fas fa-plus"></i>
                    </a>
                </div>
            </div>
            <div class="list-content">
                {{#each effects.passive}}
                    <div class="list-row" data-uuid="{{this.uuid}}">
                        <div class="row-content">
                            {{> listEffect effect=this}}
                        </div>
                        {{> sheetButtons document=this}}
                    </div>
                {{/each}}
            </div>
        </div>

        <div class="sheet-list">
            <div class="list-header row-content">
                <div class="list-name">{{localize "TOW.Sheet.DisabledEffects"}}</div>
                <div>{{localize "TOW.Sheet.Source"}}</div>
                <div class="list-controls"></div>
            </div>
            <div class="list-content">
                {{#each effects.disabled}}
                    <div class="list-row" data-uuid="{{this.uuid}}">
                        <div class="row-content inactive">
                            {{> listEffect effect=this}}
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>

</section>