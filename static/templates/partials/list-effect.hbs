<div class="list-name">
    <img src="{{effect.img}}">
    {{#if effect.isCondition}}
        <a class="label" data-action="toggleSummary">{{effect.name}}</a>
    {{else}}
        <a class="label" data-action="editEmbedded" data-uuid="{{effect.uuid}}">{{effect.name}}</a>
    {{/if}}
</div>

<div class="source">
    {{#if fromMount}}
        <a data-action="editEmbedded" data-uuid="{{effect.item.uuid}}"><i class="fa-solid fa-horse"></i>{{effect.source}}</a>
    {{else if effect.item}}
        <a data-action="editEmbedded" data-uuid="{{effect.item.uuid}}"><i class="fas fa-suitcase"></i>{{effect.source}}</a>
    {{else if effect.transferData.sourceData.zone}}
        <i class="fa-solid fa-game-board-simple"></i>{{effect.source}}
    {{else}}
        {{effect.source}}
    {{/if}}
</div>


<div class="list-controls">
    {{#unless fromMount}}
        <a data-action="toggleProperty" data-path="disabled" data-tooltip="{{localize 'TOW.Tooltips.ToggleEffect'}}">{{#if effect.disabled}}<i class="far fa-circle"></i>{{else}}<i class="far fa-check-circle"></i>{{/if}}</a>
        {{#if effect.item}}
            <a class="inactive list-control" data-tooltip="{{localize 'TOW.Tooltips.CannotDeleteItemEffect'}}"><i class="fas fa-xmark"></i></a>
        {{else}}
            <a class="list-control" data-action="deleteEmbedded"><i class="fas fa-xmark"></i></a>
        {{/if}}
    {{/unless}}
</div>