<fieldset class="endeavour-fields">
    <legend>Endeavour</legend>
    <div class="test-data">
        <div style="flex: 0 0 5rem">
            <label>{{localize "TOW.Sheet.Identifier"}}</label>
            <input type="text" name="flags.whtow.endeavour.key" value="{{key}}">
        </div>
        <div>
            <label>{{localize "TOW.Sheet.Skill"}}</label>
            <select name="flags.whtow.endeavour.test.skill">
                {{selectOptions (config "skills") selected=test.skill blank=""}}
            </select>
        </div>
        <div style="display: flex; flex-direction: column; align-items:center">
            <label>{{localize "TOW.Sheet.ChooseSkill"}}</label>
            <input type="checkbox" name="flags.whtow.endeavour.chooseSkill" {{checked chooseSkill}}>
        </div>
        {{#if chooseSkill}}
        <div>
            <label>{{localize "TOW.Sheet.SkillOptions"}}</label>
            {{{multiSelectHTML}}}
        </div>
        {{/if}}
        <div style="flex: 0 0 3rem">
            <label>{{localize "TOW.Sheet.Dice"}}</label>
            <input type="text" name="flags.whtow.endeavour.test.dice" value="{{test.dice}}">
        </div>
    </div>

    <div class="flexrow">
        <div class="script">
            <button type="button" data-action="configureScript">Configure Script<i class="fa-solid fa-gear-complex-code"></i></button>
        </div>

        {{#if effect}}
        <div class="effect">
            <a data-action="openEffect">Effect: <strong>{{effect.name}}</strong></a>
            <a data-action="removeEffect"><i class="fas fa-xmark"></i></a>
        </div>
        {{else}}
        <div class="effect droppable">
            Drag and drop an Active Effect. This will be applied to an Actor performing the Endeavour.
        </div>
        {{/if}}
        </div>
    </div>

</fieldset>