<section class="tab {{tab.cssClass}}" data-group="primary" data-tab="{{tab.id}}">

    {{formGroup system.schema.fields.skill value=source.system.skill localize=true}}
    {{formGroup system.schema.fields.grip value=source.system.grip blank=false}}
    {{> itemDamage}}
    {{#if system.isMelee}}
    {{formGroup system.schema.fields.range.fields.melee value=source.system.range.melee blank=false localize=true label="TOW.Sheet.Range"}}
    {{else if system.isRanged}}
    <div class="form-group">
        <label>{{localize "TOW.Sheet.OptimumRange"}}</label>
        <div class="form-fields">
            <select name="system.range.min">
                {{selectOptions (config "range") selected=source.system.range.min}}    
            </select>
            -
            <select name="system.range.max">
                {{selectOptions (config "range") selected=source.system.range.max}}    
            </select>
        </div>
    </div>
    <div class="form-group">
        <label>Successes to Reload</label>
        <div class="form-fields">
            {{formInput system.schema.fields.reload.fields.value value=source.system.reload.value}}
            Optional
            {{formInput system.schema.fields.reload.fields.optional value=source.system.reload.optional}}
        </div>
    
    </div>
    {{/if}}
    {{formGroup system.schema.fields.traits value=source.system.traits}}
    <button type="button" data-action="configureModifiers">Configure Modifiers <i class="fa-solid fa-gear"></i></button>
    {{> itemTest fields=fields.test.fields value=source.system.test hideSelf=true}}

</section>